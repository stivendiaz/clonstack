<%= form_for question do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body, rows: 5, class: "form-control" %>
	</div>

	<%= f.submit 'Add question', class: 'btn btn-primary' %>
<% end %>