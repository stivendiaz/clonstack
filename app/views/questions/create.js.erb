<% if @question.errors.empty? %>
  // add the row to the table, show alert and hide modal
  $('.body').append(' <%= j render "row", question: @question %>');
  $('.flash').html("The question has been added successfully");
  $('.alert-success').show();
  $('#product-modal').modal('hide');
<% else %>
  // show first error
  alert('<%= @question.errors.full_messages[0] %>');
<% end %>